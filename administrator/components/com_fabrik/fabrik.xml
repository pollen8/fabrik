		<file>fabrik.php</file>
		<file>router.php</file>
		<file>user_ajax_example.php</file>
	</files>

	<media folder="media">
		<folder>com_fabrik/images</folder>
		<folder>com_fabrik/css</folder>
		<folder>com_fabrik/js</folder>
