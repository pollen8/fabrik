<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset addfieldpath="/plugins/fabrik_form/twitter/elements" name="plg-form-twitter">
			<field description="PLG_FORM_TWITTER_CONSUMER_KEY_DESC" label="PLG_FORM_TWITTER_CONSUMER_KEY_LABEL" name="twitter_consumer_key" repeat="true" size="30" type="text"/>
			
			<field description="PLG_FORM_TWITTER_CONSUMER_SECRET_KEY_DESC" label="PLG_FORM_TWITTER_CONSUMER_SECRET_KEY_LABEL" name="twitter_consumer_secret" repeat="true" size="30" type="text"/>
				
			<field default="" description="PLG_FORM_TWITTERMSGFIELD_DESC" label="PLG_FORM_TWITTERMSGFIELD_LABEL" name="twitter_msg_field" onlytablefields="0" repeat="true" type="listfields"/>
				
			<field cols="30" description="PLG_FORM_TWITTERTMPLFIELD_DESC" label="PLG_FORM_TWITTERTMPLFIELD_LABEL" name="twitter_msg_tmpl" repeat="true" rows="6" type="textarea"/>
				
			<field default="0"
				class="btn-group"
				description="PLG_FORM_TWITTERSHOWSUCCESSMSG_DESC" label="PLG_FORM_TWITTERSHOWSUCCESSMSG_LABEL" name="twitter-show-success-msg" repeat="true" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="" description="PLG_FORM_TWITTER_BITLY_API_LOGIN_DESC" label="PLG_FORM_TWITTER_BITLY_API_LOGIN" name="twitter_bitly_api_login" repeat="true" size="20" type="text"/>
		
			<field default="" description="PLG_FORM_TWITTER_BITLY_API_KEY_DESC" label="PLG_FORM_TWITTER_BITLY_API_KEY" name="twitter_bitly_api_key" repeat="true" size="30" type="text"/>
			
			<field description="PLG_FORM_TWITTER_SIGNIN_DESC" label="PLG_FORM_TWITTER_SIGNIN_LABEL" name="twitter_oauth_token" repeat="true" type="twittersignin"/>
					
			<field description="PLG_FORM_TWITTER_OAUTH_TOKEN_SECRET_DESC" label="PLG_FORM_TWITTER_OAUTH_TOKEN_SECRET_LABEL" name="twitter_oauth_token_secret" repeat="true" type="text"/>
				
			<field description="PLG_FORM_TWITTER_OAUTH_USER_DESC" label="PLG_FORM_TWITTER_OAUTH_USER_LABEL" name="twitter_oauth_user" repeat="true" type="text"/>
		</fieldset>
	</fields>
</form>
