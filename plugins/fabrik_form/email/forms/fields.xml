<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-form-email">
		
			<field description="PLG_FABRIK_FORM_EMAIL_TO_DESC" label="PLG_FABRIK_FORM_EMAIL_TO_LABEL" name="email_to" repeat="true" size="97" type="text"/>
				
			<field cols="55" description="PLG_FABRIK_FORM_EMAIL_TO_EVAL_DESC" label="PLG_FABRIK_FORM_EMAIL_TO_EVAL_LABEL" name="email_to_eval" repeat="true" rows="3" type="textarea"/>
				
			<field description="PLG_FABRIK_EMAIL_FROM_DESC" label="PLG_FABRIK_EMAIL_FROM_LABEL" name="email_from" repeat="true" size="97" type="text"/>
				
			<field description="PLG_FABRIK_FORM_EMAIL_SUBJECT_DESC" label="PLG_FABRIK_FORM_EMAIL_SUBJECT_LABEL" name="email_subject" repeat="true" size="97" type="text"/>
			
			<field description="PLG_FABRIK_FORM_EMAIL_TEMPLATE_DESC" directory="/plugins/fabrik_form/email/tmpl/" hide_default="1" label="PLG_FABRIK_FORM_EMAIL_TEMPLATE_LABEL" name="email_template" repeat="true" type="filelist"/>
						
			<field add_select="true" description="PLG_FABRIK_FORM_EMAIL_OR_CONTENT_TEMTEMPLATE_DESC" label="PLG_FABRIK_FORM_EMAIL_OR_CONTENT_TEMTEMPLATE_LABEL" name="email_template_content" query="SELECT id AS value, title AS text FROM #__content WHERE state != -2 " repeat="true" type="sql2"/>
			
			<field description="PLG_FABRIK_FORM_EMAIL_ATTACHTYPE_DESC" label="PLG_FABRIK_FORM_EMAIL_ATTACHTYPE_LABEL" name="email_attach_type" repeat="true" size="5" type="text"/>
			
			<field cols="55" description="PLG_FABRIK_FORM_EMAIL_ATTACH_EVAL_DESC" label="PLG_FABRIK_FORM_EMAIL_ATTACH_EVAL_LABEL" name="email_attach_eval" rows="5" type="textarea"/>
				
			<field cols="55" description="PLG_FABRIK_FORM_EMAIL_CONDITION_DESC" label="PLG_FABRIK_FORM_EMAIL_CONDITION_LABEL" name="email_conditon" repeat="true" rows="5" type="textarea"/>
				
		</fieldset>
	</fields>
</form>
