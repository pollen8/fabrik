<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-list-radius_search">
			<field default="1" label="PLG_LIST_UPDATE_COL_ACCESS_LABEL" name="updatecol_access" repeat="true" type="accesslevel"/>
				
		<!-- button location no longer used - buttons rendered inline and shown as hover
			<field name="updatecol_button_location" type="list" default="bottom"
				label="PLG_LIST_UPDATE_COL_BUTTON_LOCATION_LABEL"
				description="PLG_LIST_UPDATE_COL_BUTTON_LOCATION_DESC">
				<option value="bottom">Bottom</option>
				<option value="perrow">Per row</option>
				<option value="both">Both</option>			
			</field>-->
			
			<field label="PLG_LIST_UPDATE_COL_BUTTON_LABEL_LABEL" name="button_label" repeat="true" size="30" type="text"/>
			
			<field default="update_col.png" description="PLG_LIST_UPDATE_COL_IMAGE_DESC" label="PLG_LIST_UPDATE_COL_IMAGE_LABEL" name="list_update_col_image_name" repeat="true" size="20" type="text"/>
				
			<field description="PLG_LIST_UPDATE_COL_VIEW_SETTINGS_DESC" label="PLG_LIST_UPDATE_COL_VIEW_SETTINGS_LABEL" name="update_col_updates" repeat="true" type="fabrikmodalrepeat">
			
				<fields name="params">
					<fieldset modal="true" name="update_col_updates_modal" repeat="true">
								
						<field label="PLG_LIST_UPDATE_COL_COLUMN_TO_UPDATE_LABEL" name="coltoupdate" type="listfields" valueformat="tableelement"/>
							
						<field label="PLG_LIST_UPDATE_COL_UPDATE_TO_LABEL" name="update_value" size="30" type="text"/>
							
					</fieldset>
				</fields>
				
			</field>
			
				
			<field default="" description="PLG_LIST_UPDATE_COL_UPDATE_MESSAGE_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_MESSAGE_LABEL" name="update_message" repeat="true" size="30" type="text"/>
					
			<field description="PLG_LIST_UPDATE_COL_UPDATE_DATE_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_DATE_LABEL" name="update_date_element" repeat="true" type="listfields" valueformat="tableelement"/>
				
			<field description="PLG_LIST_UPDATE_COL_UPDATE_USER_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_USER_LABEL" name="update_user_element" repeat="true" type="listfields" valueformat="tableelement"/>
				
			<field description="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_LABEL" name="update_email_element" repeat="true" type="listfields" valueformat="id"/>
				
			<field description="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_SUBJECT_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_SUBJECT_LABEL" name="update_email_subject" repeat="true" size="35" type="text"/>
				
			<field default="0" label="COM_FABRIK_EVAL" name="eval" repeat="true" type="checkbox"/>
				
			<field cols="30" description="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_MSG_DESC" label="PLG_LIST_UPDATE_COL_UPDATE_EMAIL_MSG_LABEL" name="update_email_msg" repeat="true" rows="5" type="textarea"/>

		</fieldset>
	</fields>
</form>
