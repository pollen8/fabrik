<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-list-radius_search">
			<field name="radius_mapelement"
				type="listfields"
				description="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_DESC"
				filter="googlemap"
				label="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_LABEL"
				repeat="true" />
				
			<field name="radius_unit"
				type="list"
				default="km"
				label="PLG_LIST_RADIUS_SEARCH_RADIUS_UNIT_LABEL"
				repeat="true">
					<option value="km">Kms</option>
					<option value="miles">Miles</option>
			</field>
			
			<field name="radius_max"
				type="text"
				default="100"
				label="PLG_LIST_RADIUS_SEARCH_MAX_LABEL"
				repeat="true"
				size="4" />
				
			<field name="radius_label"
				type="text"
				default="Radius search"
				label="PLG_LIST_RADIUS_SEARCH_SEARCH_LABEL_LABEL"
				repeat="true"/>
				
			<field name="radius_placeelement"
				type="listfields"
				description="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_DESC"
				label="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_LABEL"
				repeat="true"/>

			<field name="prefilter_distance"
				type="field"
				default=""
				size="7"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_START_FILTER_DISTANCE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_START_FILTER_DISTANCE_LABEL" />
			
			
		</fieldset>
		
		<fieldset name="plg-list-radius_search-opts" label="PLG_LIST_RADIUS_SEARCH_OPTS">
		
			<field name="myloc"
				type="radio"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_MYLOC_DESC"
				label="PLG_LIST_RADIUS_SEARCH_MYLOC_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="place"
				type="radio"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_PLACE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_PLACE_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="coords"
				type="radio"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_COORDS_DESC"
				label="PLG_LIST_RADIUS_SEARCH_COORDS_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
		</fieldset>
		
	</fields>
</form>
